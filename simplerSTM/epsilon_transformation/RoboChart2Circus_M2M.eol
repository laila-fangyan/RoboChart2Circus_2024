operation RC!Skip createSkipStmtAsAction(): Z!InterruptAction{

	var leftAction = "SSTOP".createCallAction();
	var rightAction = createSkipAction();
	var circusAction = createAction2("InterruptAction", leftAction, rightAction);
	
	return circusAction;
}


