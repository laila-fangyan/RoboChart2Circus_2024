	decl.expr = type;
	
	return decl;
}

operation Z!ChannelDecl addChannelDecl(
	chan_name: String
	): Z!ChannelDecl{
	if(self.expr.name.word  = "SYNCH"){
		self.channelNameList.addName2NameList(chan_name);
		return self;
	}	else errln("The new channel is untyped, but the existing channel has a type.");
}

operation Z!ChannelDecl addChannelDecl(
	chan_name: String,
	chan_type: String
	): Z!ChannelDecl{
	if(self.expr.name.word  = chan_type){
		self.channelNameList.addName2NameList(chan_name);
		return self;
	}	else errln("The type of the new channel does not match the existing channel decleration.");
}

operation Z!ChannelDecl addChannelDecl(
	chan_name: String,
	chan_type: Z!Expr
	): Z!ChannelDecl{
	if(self.expr  = chan_type){
		self.channelNameList.addName2NameList(chan_name);
		return self;
	}	else "The type of the new channel does not match the existing channel decleration.".errln();
}
