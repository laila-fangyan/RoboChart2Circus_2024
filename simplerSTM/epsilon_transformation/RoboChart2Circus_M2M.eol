	expr:RC!Expression,
	type: String
	): Z!Communication{
	
	var commu = new Z!Communication;

	commu.commUsage = Z!CommUsage#Normal;
	commu.indexed = false;
	commu.multiSych = 0;
	commu.channelExpr = chan_name.createRefExpr(false,false);

	commu.fieldList = new Z!CircusFieldList; 
		
	
