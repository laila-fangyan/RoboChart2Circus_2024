		PRenaming_pairL.add("setL_"+v);//R204 setL(v)
	}
	
	var PRenamed = P.createRenameProcess(PRenaming_pairR, PRenaming_pairL);
	
	

	//step 2 - rename Q: (1) create assigementpairs, (2) rename Q
				
	//share <-- share
	var QRenaming_pairR = Sequence{"share"};
