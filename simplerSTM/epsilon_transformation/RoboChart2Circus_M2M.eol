	}
	for(v in qr_pw){
		PQRenaming_pairR.add("setL_"+v);
		PQRenaming_pairL.add("set_"+v);
	}
	
	var PparQRenamed = PparQ.createRenameProcess(PQRenaming_pairR, PQRenaming_pairL);
	
	return PparQRenamed;
}


